            {

                <br />      <br />
                <div>
                    @Html.LabelFor(model => model.ProximoComprobanteProveedorReferencia, "Plantilla de Requerimientos")
                    <br />
                    @*para que quede el espacio*@
                    <input type="file" name="file" />
                    <input type="submit" class="btn" value="Subir" />
                    <br />
                    <a class="btn  " style="color: Black" href="@Url.Action("BajarPlantilla")">
                        @*<i class="icon-print">
                            </i>&nbsp;*@
                        Descargar
                    </a>
                </div>

                <br />
                <br />


                @*<input type="submit" value="Eliminar" class="btn" />*@
            }


            <br />
            <input type="submit" value='Aceptar' class="btn  btn-large btn-primary" style="width: 100px;
        height: 40px" />

        }
