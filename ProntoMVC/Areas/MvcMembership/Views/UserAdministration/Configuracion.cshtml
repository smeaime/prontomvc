            <a href="localhost/Reports_MSSQLSERVER2/Pages/Folder.aspx?ViewMode=Detail">
                Interfaz local
            </a>
            <br />
            <a href="@System.Configuration.ConfigurationManager.AppSettings["ReportServer"].Replace("ReportServer", "Reports") ">
                Interfaz web
            </a>

            <br />
            <br />

            <p>
                @*Logs de RRSS en la base (tablas [ExecutionLogStorage] ?)
                    http://stackoverflow.com/questions/491389/where-does-reporting-services-store-its-log-files
                    C:\Program Files\Microsoft SQL Server\MSRS10_50.BDL\Reporting Services\LogFiles*@
            </p>



            @Html.LabelFor(model => model.CartelAviso, "Aviso") @*para que quede el espacio*@
            <br />
            @Html.TextAreaFor(m => m.CartelAviso, new { id = "Aviso", @class = "span8" })

            <br />
            <br />
            @Html.LabelFor(model => model.ProximoComprobanteProveedorReferencia, "Numeradores:") @*para que quede el espacio*@
