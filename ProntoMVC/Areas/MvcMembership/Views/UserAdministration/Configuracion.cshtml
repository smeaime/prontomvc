            <br />
            @Html.TextBoxFor(m => m.ProximoComprobanteProveedorReferencia, new { id = "Aviso", @class = "span2" })

            <br /><br />

            @Html.LabelFor(model => model.PathPlantillas, "Directorio de plantillas y archivo .APP") @*para que quede el espacio*@
            <br />
            @Html.TextBoxFor(m => m.PathPlantillas, new { id = "Aviso", @class = "span6" })


