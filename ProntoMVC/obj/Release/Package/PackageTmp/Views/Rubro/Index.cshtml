@model IEnumerable<ProntoMVC.Models.Rubro>
@{
    ViewBag.Title = "Index";
}
<div><input id="FechaInicial" name="FechaInicial" type="hidden" value=@Request.QueryString["fechainicial"]></div>
<div><input id="FechaFinal" name="FechaFinal" type="hidden" value=@Request.QueryString["fechafinal"]></div>
<div><input id="IdObra" name="IdObra" type="hidden" value=@Request.QueryString["idobra"]></div>

<br />
<br />

<table id="Lista" class="scroll" cellpadding="0" cellspacing="0"></table>
<div id="ListaPager" class="scroll" style="text-align: center; height: 30px"></div>

<p>@Html.ActionLink("Nuevo Rubro", "Edit", new { id = -1 }, new { @class="btn btn-primary" })</p>

<script type="text/javascript">
    $(document).ready(function () {
        var lastSelectedId;
        var inEdit;
        grid = $("#Lista");

        //Para que haga wrap en las celdas
        $('.ui-jqgrid .ui-jqgrid-htable th div').css('white-space', 'normal');

        $('#Lista').jqGrid({
            url: '@Url.Action("Listado_jqGrid", "Rubro")',
            postData: { 'FechaInicial': function () { return $("#FechaInicial").val(); }, 'FechaFinal': function () { return $("#FechaFinal").val(); }, 'IdObra': function () { return $("#IdObra").val(); } },
            datatype: 'json',
            mtype: 'POST',
            shrinkToFit: true,
            colNames: ['Acciones','Acciones', 'IdRubro', 'Codigo', 'Descripcion', 'Cod Cuenta',
                        'Cuenta', 'Valor Rechazado', 'Gravado Default.', 'Codigo AFIP'
                      ],
            colModel: [
                        { name: 'act', index: 'act', align: 'center', width: 0, sortable: false, editable: false, search: false }, //, formatter: 'showlink', formatoptions: { baseLinkUrl: '@Url.Action("Edit")'} },
                        {name: 'impr', index: 'act', align: 'center', width: 0, sortable: false, editable: false, hidden: true, search: false },
                        {name: 'IdRubro', index: 'IdRequerimiento', align: 'left', width: 0, editable: false, hidden: true },
                        { name: 'CodigoRubro', index: 'NumeroRequerimiento', align: 'right', width: 0, editable: false, search: true, searchoptions: { sopt: ['eq']} },
                        { name: 'Descripcion', index: 'FechaRequerimiento', width: 0, align: 'center', sorttype: 'date', editable: false, formatoptions: { newformat: 'dd/mm/yy' }, datefmt: 'dd/mm/yy', search: false },
                        { name: 'IdCuenta', index: 'Cumplido', align: 'center', width: 0, editable: false, search: true, searchoptions: { sopt: ['cn']} },
                        { name: 'Cuenta', index: 'Recepcionado', align: 'center', width: 0, editable: false, search: true, searchoptions: { sopt: ['cn']} },
                        { name: 'ValorRechazado', index: 'Entregado', align: 'center', width: 0, editable: false, search: true, searchoptions: { sopt: ['cn']} },
                        { name: 'GravadoDefault', index: 'Impresa', align: 'center', width: 0, editable: false, search: true, searchoptions: { sopt: ['cn']} },
                        { name: 'CodigoAFIP', index: 'Detalle', align: 'left', width: 0, editable: false, search: true, searchoptions: { sopt: ['cn']} }
                    ],
            onSelectRow: function (id) {
                if (id && id !== lastSelectedId) {
                    if (typeof lastSelectedId !== "undefined") {
                        grid.jqGrid('restoreRow', lastSelectedId);
                    }
                    lastSelectedId = id;
                }
            },
            pager: $('#ListaPager'),
            rowNum: 15,
            rowList: [10, 20, 50, 100],
            sortname: 'IdRubro', //'NumeroRequerimiento',
            sortorder: 'asc',
            viewrecords: true,
            width: 'auto',
            height: '100%',
            altRows: false,
            footerrow: true,
            userDataOnFooter: true,
            //imgpath: '/content/cupertino/images',
            //loadonce: true,
            caption: '<b>RubroS</b>'
        });
        //jQuery("#Lista").jqGrid('navGrid', '#ListaPager', { edit: false, add: false, del: false, refresh: true, search: true });
        jQuery("#Lista").jqGrid('navGrid', '#ListaPager', { refresh: true, add: false, edit: false, del: false }, {}, {}, {}, { sopt: ["cn"], width: 700, closeOnEscape: true, closeAfterSearch: true });
        jQuery("#Lista").jqGrid('gridResize', { minWidth: 350, maxWidth: 1500, minHeight: 80, maxHeight: 500 });

    });

</script>
