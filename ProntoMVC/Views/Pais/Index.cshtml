                        { name: 'Codigo2', index: 'Codigo2', width: 60, align: 'left', editable: true, editrules: { required: false }, edittype: 'text', label: 'TB' },
                        { name: 'CodigoESRI', index: 'CodigoESRI', width: 60, align: 'left', editable: true, editrules: { required: false }, edittype: 'text', label: 'TB' },
                        { name: 'Cuit', index: 'Cuit', width: 200, align: 'left', editable: true, editrules: { required: false }, edittype: 'text', label: 'TB' }
