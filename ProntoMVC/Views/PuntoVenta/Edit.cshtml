        function Aprobado() {
            if ($('#Aprobo').val() != "") {
                $("#chk0").attr('checked', true);
                var Aprobo = $("#Aprobo > option:selected").html();
                $("#chk0").attr('title', Aprobo);
            }
            else {
                $("#chk0").attr('checked', false);
                $("#chk0").attr('title', "");
            }
        }

        function pickdates(id) {
            jQuery("#" + id + "_sdate", "#Lista").datepicker({ dateFormat: "yy-mm-dd" });
