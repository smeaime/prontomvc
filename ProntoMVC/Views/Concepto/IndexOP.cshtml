                        { name: 'CodigoAFIP', index: 'CodigoAFIP', align: 'left', width: 100, editable: false, hidden: true },
                        { name: 'CoeficienteAuxiliar_1', index: 'CoeficienteAuxiliar_1', align: 'left', width: 100, editable: false, hidden: true },
                        { name: 'GeneraComision', index: 'GeneraComision', align: 'left', width: 100, editable: false, hidden: true },
                        {
                            name: 'TiposConcepto', index: 'TiposConcepto', align: 'left', width: 150, editable: true, hidden: false, edittype: 'select', editrules: { required: false },
                            editoptions: {
                                dataUrl: ROOT + 'Concepto/GetTiposGrupoConcepto',
                                dataEvents: [{
                                    type: 'change', fn: function (e) {
