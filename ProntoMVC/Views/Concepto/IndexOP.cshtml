                        { name: 'Descripcion', index: 'Descripcion', width: 200, align: 'left', editable: true, editrules: { required: false }, edittype: 'text', label: 'TB' },
                        { name: 'Cuenta', index: 'Cuenta', align: 'left', width: 100, editable: false, hidden: true },
