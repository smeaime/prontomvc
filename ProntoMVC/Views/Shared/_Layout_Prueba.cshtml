        <script type="text/javascript">
            // bind save() to window.onunload
            $(window).unload(function () { layoutState.save('myLayout') });

            var myLayout, a; // create global var for the layout-instance object

            $(document).ready(function () {
                // OUTER/PAGE LAYOUT
                pageLayout = $("body").layout({ // DO NOT use "var pageLayout" here
                    west__size: .20
		            , east__size: .20
		            , south__initClosed: false
		            , north__initClosed: false
		            , east__initClosed: true
		            , west__onresize: $.layout.callbacks.resizePaneAccordions // west accordion a child of pane
		            , east__onresize: $.layout.callbacks.resizePaneAccordions // east accordion nested inside a tab-panel
                });

                // load & used 'saved-state' to override defaults
                pageLayout = $("body").layout($.extend(a, layoutState.load('myLayout')));

                // TABS INSIDE EAST-PANE
                pageLayout.panes.east.tabs({
                    show: $.layout.callbacks.resizePaneAccordions // resize tab2-accordion when tab is activated
                });
                pageLayout.sizeContent("east"); // resize pane-content-elements after creating east-tabs

                // INIT ALL ACCORDIONS - EVEN THOSE NOT VISIBLE
                $("#accordion-west").accordion({ fillSpace: true });
                $("#accordion-east").accordion({ fillSpace: true });

                // if a new theme is applied, it could change the height of some content,
                // so call resizeAll to 'correct' any header/footer heights affected
                // NOTE: this is only necessary because we are changing CSS *AFTER LOADING* using themeSwitcher
                setTimeout(pageLayout.resizeAll, 2000); /* allow time for browser to re-render with new theme */


                $.post("/Home/Arbol", null, function (data) {
                    var menu_html = '<ul id="Tablas1" class="filetree treeview-famfamfam">';
                    var longitud = 0
                    for (var i = 0; i < data.length; i++) {
                        if (longitud > 0) {
                            if (longitud - data[i].IdItem.length == 3) { menu_html += '</ul></li>' }
                            if (longitud - data[i].IdItem.length == 6) { menu_html += '</ul></li></ul></li>' }
                            if (longitud - data[i].IdItem.length == 9) { menu_html += '</ul></li></ul></li></ul></li>' }
                            if (longitud - data[i].IdItem.length == 12) { menu_html += '</ul></li></ul></li></ul></li></ul></li>' }
                        }
                        if (data[i].EsPadre == "SI") {
                            menu_html += '<li><span class="folder" id="' + data[i].Clave + '">' + data[i].Descripcion + '</span><ul>'
                        }
                        else {
                            if (data[i].Link.length > 0) {
                                menu_html += '<li><span class="leaf country" id="' + data[i].Clave + '">' + data[i].Link + '</span>' + '</li>'
                            }
                            else {
                                menu_html += '<li><span class="leaf country" id="' + data[i].Clave + '">' + data[i].Descripcion + '</span></li>'
                            }
                        }
                        longitud = data[i].IdItem.length;
                    }
                    if (longitud > 0) {
                        if (longitud - 2 == 3) { menu_html += '</ul></li>' }
                        if (longitud - 2 == 6) { menu_html += '</ul></li></ul></li>' }
                        if (longitud - 2 == 9) { menu_html += '</ul></li></ul></li></ul></li>' }
                        if (longitud - 2 == 12) { menu_html += '</ul></li></ul></li></ul></li></ul></li>' }
                    }
                    menu_html += '</ul>'
                    $("#Accord1").empty().append(menu_html);

                    $("#Tablas1").treeview({
                        collapsed: true,
                        animated: "medium",
                        control: "#sidetreecontrol",
                        persist: "location"
                    });
                });

                //TREE VIEW
                //Agrega un submenu
                $("#add").click(function () {
                    var branches = $("<li><span class='folder'>New Sublist</span><ul>" +
					"<li><span class='file'>Item1</span></li>" +
					"<li><span class='file'>Item2</span></li></ul></li>").appendTo("#browser");
                    $("#Tablas").treeview({
                        add: branches
                    });
                    branches = $("<li class='closed'><span class='folder'>New Sublist</span><ul><li><span class='file'>Item1</span></li><li><span class='file'>Item2</span></li></ul></li>").prependTo("#folder21");
                    $("#Tablas").treeview({
                        add: branches
                    });
                });

                //Boton derecho elimina un submenu o item de menu
                $("#Tablas").bind("contextmenu", function (event) {
                    if ($(event.target).is("li") || $(event.target).parents("li").length) {
                        $("#Tablas").treeview({
                            remove: $(event.target).parents("li").filter(":first")
                        });
                        return false;
                    }
                });
            });
        </script> 
