<script type="text/javascript">
    $(document).ready(function () {

        var lastSelectedId;
        var inEdit;
        grid = $("#Lista");

        $('#Generar:button').attr('disabled', 'disabled');

        $('.ui-jqgrid .ui-jqgrid-htable th div').css('white-space', 'normal');

        $('#Aceptar').click(function () {
            var Fecha, CodigoActividad;

            Fecha = $("#FechaInicial").val();
            if (Fecha.length == 0) {
                alert("Debe ingresar la fecha inicial");
                return;
            }
            Fecha = $("#FechaFinal").val();
            if (Fecha.length == 0) {
                alert("Debe ingresar la fecha final");
                return;
            }
            CodigoActividad = $("#CodigoActividad").val();
            if (CodigoActividad.length == 0) {
                alert("Debe ingresar el codigo de actividad");
                return;
            }

            $('#Generar:button').removeAttr('disabled');

            $('#Lista').jqGrid('GridUnload');
            $('#Lista').jqGrid({
                url: '@Url.Action("SIFERE_PercepcionesIIBB_Clientes_Informe", "Reporte")',
                postData: { 'FechaInicial': function () { return $("#FechaInicial").val(); }, 'FechaFinal': function () { return $("#FechaFinal").val(); }, 'CodigoActividad': function () { return $("#CodigoActividad").val(); } },
                datatype: 'json',
                mtype: 'POST',
                colNames: ['Acciones', 'IdAux', 'Cliente', 'Cuit cliente', 'Fecha', 'Tipo comp.', 'Letra', 'Punto venta', 'Numero', 'Base imponible', 'Importe percepcion',
                           'Numero certif. percepcion', 'Alicuota', 'Tipo registro', 'IdProvinciaImpuesto', 'Provincia', 'Cuit empresa', 'Nro. inscripcion IIBB', 'Registro',
                           'Registro web', 'Importe IVA', 'Importe total', 'IBCondicion', 'IdCodigoIva', 'Cod. cond.', 'Cod. comp.', 'Cod. actividad', 'Numero orden',
                           'Cod. norma', 'Jurisdiccion', 'Otros conceptos'],
                colModel: [
                            { name: 'act', index: 'act', align: 'center', width: 0, sortable: false, editable: false, search: false, hidden: true },
                            { name: 'IdAux', index: 'IdAux', align: 'left', width: 0, editable: false, hidden: true },
                            { name: 'Cliente', index: 'Cliente', align: 'left', width: 400, editable: false, hidden: false },
                            { name: 'CuitCliente', index: 'CuitCliente', align: 'center', width: 100, editable: false, hidden: false },
                            { name: 'Fecha', index: 'Fecha', width: 80, align: 'center', sorttype: 'date', hidden: false, editable: false, formatoptions: { newformat: 'dd/mm/yy' }, datefmt: 'dd/mm/yy', search: false },
                            { name: 'TipoComprobante', index: 'TipoComprobante', align: 'center', width: 40, editable: false, hidden: false },
                            { name: 'LetraComprobante', index: 'LetraComprobante', align: 'center', width: 30, editable: false, hidden: false },
                            { name: 'PuntoVenta', index: 'PuntoVenta', align: 'center', width: 30, editable: false, hidden: false },
                            { name: 'Numero', index: 'Numero', align: 'right', width: 80, editable: false, hidden: false },
                            { name: 'BaseImponible', index: 'BaseImponible', align: 'right', width: 100, editable: false, hidden: false },
                            { name: 'ImportePercepcion', index: 'ImportePercepcion', align: 'right', width: 100, editable: false, hidden: false },
                            { name: 'NumeroCertificadoPercepcionIIBB', index: 'NumeroCertificadoPercepcionIIBB', align: 'right', width: 80, editable: false, hidden: false },
                            { name: 'Alicuota', index: 'Alicuota', align: 'right', width: 50, editable: false, hidden: false },
                            { name: 'TipoRegistro', index: 'TipoRegistro', align: 'center', width: 40, editable: false, hidden: false },
                            { name: 'IdProvinciaImpuesto', index: 'IdProvinciaImpuesto', align: 'left', width: 0, editable: false, hidden: true },
                            { name: 'ProvinciaImpuesto', index: 'ProvinciaImpuesto', align: 'left', width: 200, editable: false, hidden: false },
                            { name: 'CuitEmpresa', index: 'CuitEmpresa', align: 'center', width: 100, editable: false, hidden: false },
                            { name: 'IBNumeroInscripcion', index: 'IBNumeroInscripcion', align: 'right', width: 80, editable: false, hidden: false },
                            { name: 'Registro', index: 'Registro', align: 'left', width: 800, editable: false, hidden: false },
                            { name: 'Registro1', index: 'Registro1', align: 'left', width: 800, editable: false, hidden: false },
                            { name: 'ImporteIVA', index: 'ImporteIVA', align: 'right', width: 100, editable: false, hidden: false },
                            { name: 'ImporteTotal', index: 'ImporteTotal', align: 'right', width: 100, editable: false, hidden: false },
                            { name: 'IBCondicion', index: 'IBCondicion', align: 'center', width: 40, editable: false, hidden: true },
                            { name: 'IdCodigoIva', index: 'IdCodigoIva', align: 'left', width: 0, editable: false, hidden: true },
                            { name: 'CodigoIBCondicion', index: 'CodigoIBCondicion', align: 'center', width: 40, editable: false, hidden: false },
                            { name: 'CodigoComprobante', index: 'CodigoComprobante', align: 'center', width: 40, editable: false, hidden: false },
                            { name: 'CodigoActividad', index: 'CodigoActividad', align: 'center', width: 40, editable: false, hidden: false },
                            { name: 'NumeroOrden', index: 'NumeroOrden', align: 'center', width: 40, editable: false, hidden: false },
                            { name: 'CodigoNorma', index: 'CodigoNorma', align: 'center', width: 40, editable: false, hidden: false },
                            { name: 'Jurisdiccion', index: 'Jurisdiccion', align: 'center', width: 50, editable: false, hidden: false },
                            { name: 'OtrosConceptos', index: 'OtrosConceptos', align: 'left', width: 100, editable: false, hidden: false },
                ],
                onSelectRow: function (id) {
                    if (id && id !== lastSelectedId) {
                        if (typeof lastSelectedId !== "undefined") {
                            grid.jqGrid('restoreRow', lastSelectedId);
                        }
                        lastSelectedId = id;
                    }
                },
                pager: $('#ListaPager'),
                rowNum: 5000,
                rowList: [10, 20, 5000],
                sortname: 'IdAux',
                sortorder: 'asc',
                viewrecords: true,
                width: 'auto',
                height: '100%',
                altRows: false,
                footerrow: true,
                userDataOnFooter: true,
                caption: '',
                autowidth: true,
                shrinkToFit: false
            });
            jQuery("#Lista").jqGrid('navGrid', '#ListaPager', { refresh: true, add: false, edit: false, del: false }, {}, {}, {}, { sopt: ["cn"], width: 700, closeOnEscape: true, closeAfterSearch: true });
            jQuery("#Lista").jqGrid('gridResize', { minWidth: 350, maxWidth: 1500, minHeight: 80, maxHeight: 500 });
        });

        $('#Generar').click(function () {
            var cm, colModel, dataIds, data1, filename, valor, valor2, valor3, Condicion, iddeta, h, i, j, Provincias, arr, arr2;

            $grid = $('#Lista');
            colModel = $grid.jqGrid('getGridParam', 'colModel');
            dataIds = $grid.jqGrid('getDataIDs');

            Provincias = "";
            for (i = 0; i < dataIds.length; i++) {
                try {
                    data = $grid.jqGrid('getRowData', dataIds[i]);
                    valor = data['ProvinciaImpuesto'];
                    valor3 = valor + '|';
                    if (Provincias.indexOf(valor3) == -1) {
                        Provincias = Provincias + valor3;
                    }
                }
                catch (ex) {
                    alert("Generar TXT: No se pudo generar el TXT : " + ex);
                    return;
                }
            };
            Provincias = Provincias.substring(0, Provincias.length - 1)

            arr = Provincias.split('|');
            $.each(arr, function (number) {
                data1 = "";
                for (i = 0; i < dataIds.length; i++) {
                    try {
                        data = $grid.jqGrid('getRowData', dataIds[i]);
                        valor = data['ProvinciaImpuesto'];
                        if (valor.length > 0 && valor == arr[0]) {
                            valor3 = data['Registro'];
                            data1 = data1 + valor3 + '\r\n';
                        }
                    }
                    catch (ex) {
                        alert("Generar TXT: No se pudo generar el TXT : " + ex);
                        return;
                    }
                };
                data1 = data1.substring(0, data1.length - 1)
                filename = "PERCEPCION_IIBB_" + arr[0] + '.txt';
                //Rutina para pasarle al cliente el archivo generado
                var element = document.createElement('a');
                element.setAttribute('href', 'data:text/plain;charset=utf-8,' + encodeURIComponent(data1));
                element.setAttribute('download', filename);
                element.style.display = 'none';
                document.body.appendChild(element);
                element.click();
                document.body.removeChild(element);
            });
        });

        $("#Combo_1").change(function () {
            //var idusuario = $("#Combo_1 option:selected").val()
            var CodigoActividad = $("#Combo_1 > option:selected").html();
            //$("#usuario").val(usuario);
            $("#CodigoActividad").val(CodigoActividad);
        });

    });
</script>
