@model IEnumerable<ProntoMVC.Data.Models.Sector>

@{
    ViewBag.Title = "Index";
}

<h2 class="center">Sectores</h2>

<p>@Html.ActionLink("Create New", "Create")</p>

<table>
    <tr>
        <th>
            IdSector
        </th>
        <th>
            Descripcion
        </th>
        <th></th>
    </tr>

@{int i = 1;}
@foreach (var item in Model) {
    <tr class="@(i++ % 2 == 0 ? "highlighted" : "")" >
        <td>
            @Html.DisplayFor(modelItem => item.IdSector)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Descripcion)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new {id=item.IdSector}) |
            @Html.ActionLink("Details", "Details", new { id = item.IdSector }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.IdSector })
        </td>
    </tr>
}
</table>

