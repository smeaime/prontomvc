@model ProntoMVC.Data.Models.IBCondicion
@{
    ViewBag.Title = "Categoria de IIBB " + Model.Descripcion;
}

@*<link href="~/Content/themes/base/jquery.ui.combobox.css" rel="stylesheet" />
<script src="~/Scripts/jCombobox/jquery.ui.combobox.js"></script>*@
<script src="~/Scripts/bootstrap-combobox.js"></script>
<link href="~/Content/bootstrap-combobox.css" rel="stylesheet" />

@using (Html.BeginForm(null, null, FormMethod.Post, new { id = "formid" }))
{
    @Html.ValidationSummary(true)
    <div class="container-fluid">
        <div>@Html.Hidden("IdIBCondicion", Model.IdIBCondicion)</div>
        <div class="row-fluid" style="margin-bottom: 15px; margin-top: 5px;">
            <div class="span5 lightblue">
                @Html.TextBox("Titulo", "CATEGORIAS DE INGRESOS BRUTOS", new { style = "font-weight: 400; text-shadow: 0 1px 0  lightgray; font-size: 24px; border: 0; padding: 0 ; text-align: left; background: transparent;  font-family: 'Segoe UI Web Regular', 'Segoe UI', 'Lucida', Tahoma, Arial,'sans-serif'; -webkit-box-shadow: none; -moz-box-shadow: none; box-shadow: none; ", @class = "span10", @readonly = "readonly" })
            </div>
            <div class="span4 lightblue">
                <input type="button" id="grabar2" value="Aceptar" class="btn btn-primary" />
                @if (Model.IdIBCondicion > 0)
                { @Html.ActionLink("Eliminar", "DeleteConfirmed", new { id = Model.IdIBCondicion }, new { @class = "btn  btn-default" }) }
                @Html.ActionLink("Volver al listado", "Index", null, new { @class = "btn btn-link" })
            </div>
        </div>
        <div class="row-fluid">
            <div class="span8 lightblue">
                @Html.LabelFor(model => model.Descripcion, "Descripcion")
                @Html.TextBoxFor(model => model.Descripcion, new { @class = "span12" })
                @Html.ValidationMessageFor(model => model.Descripcion)
            </div>
        </div>

        <div class="row-fluid">
            <div class="span4 lightblue">
                <div class="row-fluid">
                    <div class="span12 lightblue">
                        @Html.LabelFor(model => model.IdProvincia, "Provincia")
                        @Html.DropDownList("IdProvincia",  null, "", new { @class = "combobox", @style = "height: 15px; line-height: 14px;" })
                        @Html.ValidationMessageFor(model => model.IdProvincia)
                    </div>
                </div>
            </div>
            <div class="span4 lightblue">
                @Html.LabelFor(model => model.IdProvinciaReal, "Provincia real")
                @Html.DropDownList("IdProvinciaReal", null, "", new { @class = "span12", @style = "height: 15px;   line-height: 14px;" })
                @Html.ValidationMessageFor(model => model.IdProvinciaReal)
            </div>
        </div>

        <div class="row-fluid">
            <div class="span4 lightblue">
                @Html.LabelFor(model => model.FechaVigencia, "Fecha vigencia")
                @Html.TextBoxFor(model => model.FechaVigencia, new Dictionary<string, object> { { "class", "span12" }, { "placeholder", "dd/mm/yyyy" } })
                @Html.ValidationMessageFor(model => model.FechaVigencia)
                <script>
                    $("#FechaVigencia").datepicker({
                        changeMonth: true,
                        changeYear: true,
                        dateFormat: 'dd/mm/yy'
                        //numberOfMonths: 2,
                    });
                </script>
            </div>
            <div class="span2 lightblue">
                @Html.LabelFor(model => model.Codigo, "Codigo")
                @Html.TextBoxFor(model => model.Codigo, new { @class = "span12" })
                @Html.ValidationMessageFor(model => model.Codigo)
            </div>
            <div class="span2 lightblue">
                @Html.LabelFor(model => model.CodigoActividad, "Codigo actividad")
                @Html.TextBoxFor(model => model.CodigoActividad, new { @class = "span12" })
                @Html.ValidationMessageFor(model => model.CodigoActividad)
            </div>
        </div>

        <div class="row-fluid">
            <div class="span4 lightblue">
                @Html.LabelFor(model => model.InformacionAuxiliar, "Informacion auxiliar")
                @Html.TextBoxFor(model => model.InformacionAuxiliar, new { @class = "span12" })
                @Html.ValidationMessageFor(model => model.InformacionAuxiliar)
            </div>
            <div class="span2 lightblue">
                @Html.LabelFor(model => model.CodigoAFIP, "Codigo AFIP")
                @Html.TextBoxFor(model => model.CodigoAFIP, new { @class = "span12" })
                @Html.ValidationMessageFor(model => model.CodigoAFIP)
            </div>
            <div class="span2 lightblue">
                @Html.LabelFor(model => model.CodigoArticuloInciso, "Cod. articulo Inciso")
                @Html.TextBoxFor(model => model.CodigoArticuloInciso, new { @class = "span12" })
                @Html.ValidationMessageFor(model => model.CodigoArticuloInciso)
            </div>
        </div>

        <div class="well well-sm" style="height: 150px; width: 900px;">
            <h5>RETENCIONES</h5>
            <div class="row-fluid">
                <div class="span3 lightblue">
                    @Html.LabelFor(model => model.ImporteTopeMinimo, "Importe tope minimo")
                    @Html.TextBoxFor(model => model.ImporteTopeMinimo, new { @class = "span12" })
                    @Html.ValidationMessageFor(model => model.ImporteTopeMinimo)
                </div>
                <div class="span3 lightblue">
                    @Html.LabelFor(model => model.Alicuota, "Alicuota")
                    @Html.TextBoxFor(model => model.Alicuota, new { @class = "span12" })
                    @Html.ValidationMessageFor(model => model.Alicuota)
                </div>
                <div class="span3 lightblue">
                    @Html.LabelFor(model => model.PorcentajeATomarSobreBase, "% a tomar sobre base")
                    @Html.TextBoxFor(model => model.PorcentajeATomarSobreBase, new { @class = "span12" })
                    @Html.ValidationMessageFor(model => model.PorcentajeATomarSobreBase)
                </div>
            </div>
            <div class="row-fluid">
                <div class="span3 lightblue">
                    @Html.LabelFor(model => model.PorcentajeAdicional, "% Adicional")
                    @Html.TextBoxFor(model => model.PorcentajeAdicional, new { @class = "span12" })
                    @Html.ValidationMessageFor(model => model.PorcentajeAdicional)
                </div>
                <div class="span3 lightblue">
                    @Html.LabelFor(model => model.LeyendaPorcentajeAdicional, "Leyenda % adicional")
                    @Html.TextBoxFor(model => model.LeyendaPorcentajeAdicional, new { @class = "span12" })
                    @Html.ValidationMessageFor(model => model.LeyendaPorcentajeAdicional)
                </div>
                <div class="span3 lightblue">
                    @Html.LabelFor(model => model.CodigoNormaRetencion, "Cod. norma retencion")
                    @Html.TextBoxFor(model => model.CodigoNormaRetencion, new { @class = "span12" })
                    @Html.ValidationMessageFor(model => model.CodigoNormaRetencion)
                </div>
            </div>
        </div>

        <div class="well well-sm" style="height: 280px; width: 900px;">
            <h5>PERCEPCIONES</h5>
            <h5>VENTAS</h5>
            <div class="row-fluid">
                <div class="span3 lightblue">
                    @Html.LabelFor(model => model.ImporteTopeMinimoPercepcion, "Importe tope minimo perc.")
                    @Html.TextBoxFor(model => model.ImporteTopeMinimoPercepcion, new { @class = "span12" })
                    @Html.ValidationMessageFor(model => model.ImporteTopeMinimoPercepcion)
                </div>
                <div class="span2 lightblue">
                    @Html.LabelFor(model => model.AlicuotaPercepcion, "Alicuota perc.")
                    @Html.TextBoxFor(model => model.AlicuotaPercepcion, new { @class = "span12" })
                    @Html.ValidationMessageFor(model => model.AlicuotaPercepcion)
                </div>
                <div class="span4 lightblue">
                    @Html.LabelFor(model => model.IdCuentaPercepcionIIBB, "Cuenta contable normal")
                    @Html.DropDownList("IdCuentaPercepcionIIBB", null, "", new { @class = "span12", @style = "height: 15px;   line-height: 14px;" })
                    @Html.ValidationMessageFor(model => model.IdCuentaPercepcionIIBB)
                </div>
            </div>
            <div class="row-fluid">
                <div class="span3 lightblue">
                    @Html.LabelFor(model => model.CodigoNormaPercepcion, "Cod. norma perc.")
                    @Html.TextBoxFor(model => model.CodigoNormaPercepcion, new { @class = "span12" })
                    @Html.ValidationMessageFor(model => model.CodigoNormaPercepcion)
                </div>
                <div class="span2 lightblue">
                    @Html.LabelFor(model => model.AlicuotaPercepcionConvenio, "Alicuota perc. conv.")
                    @Html.TextBoxFor(model => model.AlicuotaPercepcionConvenio, new { @class = "span12" })
                    @Html.ValidationMessageFor(model => model.AlicuotaPercepcionConvenio)
                </div>
                <div class="span4 lightblue">
                    @Html.LabelFor(model => model.IdCuentaPercepcionIIBBConvenio, "Cuenta contable convenio")
                    @Html.DropDownList("IdCuentaPercepcionIIBBConvenio", null, "", new { @class = "span12", @style = "height: 15px;   line-height: 14px;" })
                    @Html.ValidationMessageFor(model => model.IdCuentaPercepcionIIBBConvenio)
                </div>
            </div>
            <h5>COMPRAS</h5>
            <div class="row-fluid">
                <div class="span3 lightblue">
                </div>
                <div class="span2 lightblue">
                </div>
                <div class="span4 lightblue">
                    @Html.LabelFor(model => model.IdCuentaPercepcionIIBBCompras, "Cuenta contable compras")
                    @Html.DropDownList("IdCuentaPercepcionIIBBCompras", null, "", new { @class = "span12", @style = "height: 15px;   line-height: 14px;" })
                    @Html.ValidationMessageFor(model => model.IdCuentaPercepcionIIBBCompras)
                </div>
            </div>
        </div>

        <div class="span4 lightblue">
            @Html.LabelFor(model => model.AcumulaMensualmente, "Acumula por mes los pagos para calculo del impuesto ?")
            @Html.RadioButtonFor(model => model.AcumulaMensualmente, "SI") SI
            @Html.RadioButtonFor(model => model.AcumulaMensualmente, "NO") NO
        </div>

        <div class="span4 lightblue">
            @Html.LabelFor(model => model.BaseCalculo, "Base sobre la que se aplicara la alicuota del impuesto")
            @Html.RadioButtonFor(model => model.BaseCalculo, "SIN IMPUESTOS") SIN IMPUESTOS
            @Html.RadioButtonFor(model => model.BaseCalculo, "TOTAL PAGADO") TOTAL PAGADO
        </div>

    </div>

    <script type="text/javascript">
        $(document).ready(function () {

            //$('select').combobox();
            $('.combobox').combobox({bsVersion: '2'}); //.combobox()  // Bootstrap

            ////////////////////////////////////////////////////////// SERIALIZACION //////////////////////////////////////////////////////////
            function SerializaForm() {
                var valor;
                var cabecera = $("#formid").serializeObject();
                //cabecera.Descripcion = $("#Descripcion").val();

                valor = $("input[name='AcumulaMensualmente']:checked").val();
                if (typeof valor == "undefined") { $("#AcumulaMensualmente").val(""); }

                valor = $("input[name='BaseCalculo']:checked").val();
                if (typeof valor == "undefined") { $("#BaseCalculo").val(""); }

                return cabecera;
            }

            $('#grabar2').click(function () {
                var cabecera = SerializaForm();

                $('html, body').css('cursor', 'wait');
                $.ajax({
                    type: 'POST',
                    contentType: 'application/json; charset=utf-8',
                    url: ROOT + 'IBCondicion/BatchUpdate',
                    dataType: 'json',
                    data: JSON.stringify({ IBCondicion: cabecera }),
                    success: function (result) {
                        if (result) {
                            $('html, body').css('cursor', 'auto');
                            window.location = (ROOT + "IBCondicion/Edit/" + result.IdIBCondicion);
                        } else {
                            alert('No se pudo grabar el objeto.');
                            $('.loading').html('');
                            $('html, body').css('cursor', 'auto');
                            $('#grabar2').attr("disabled", false).val("Aceptar");
                        }
                    },
                    beforeSend: function () {
                        $("#loading").show();
                        $('#grabar2').attr("disabled", true).val("Espere...");
                    },
                    complete: function () {
                        $("#loading").hide();
                    },
                    error: function (xhr, textStatus, exceptionThrown) {
                        try {
                            var errorData = $.parseJSON(xhr.responseText);
                            var errorMessages = [];
                            for (var key in errorData) { errorMessages.push(errorData[key]); }
                            $('html, body').css('cursor', 'auto');
                            $('#grabar2').attr("disabled", false).val("Aceptar");
                            $("#textoMensajeAlerta").html(errorData.Errors.join("<br />"));
                            $("#mensajeAlerta").show();
                            alert(errorData.Errors.join("\n").replace(/<br\/>/g, '\n'));
                        } catch (e) {
                            $('html, body').css('cursor', 'auto');
                            $('#grabar2').attr("disabled", false).val("Aceptar");
                            $("#textoMensajeAlerta").html(xhr.responseText);
                            $("#mensajeAlerta").show();
                        }
                    }
                });
            });

        });

    </script>
}
