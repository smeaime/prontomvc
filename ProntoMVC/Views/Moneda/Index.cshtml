@model IEnumerable<ProntoMVC.Data.Models.Moneda>
@{
    ViewBag.Title = "Monedas";
}

<br />
<p>
    <button onclick="window.location.href='@Url.Action("Edit", new { id = -1 })'" class="btn btn-primary">Nuevo</button>
</p>

<table id="Lista" class="scroll" cellpadding="0" cellspacing="0"></table>
<div id="ListaPager" class="scroll" style="text-align: center; height: 30px"></div>

<script type="text/javascript">
    $(document).ready(function () {
        var lastSelectedId;
        var inEdit;
        grid = $("#Lista");

        $('.ui-jqgrid .ui-jqgrid-htable th div').css('white-space', 'normal');

        $('#Lista').jqGrid({
            url: '@Url.Action("Listado_jqGrid", "Moneda")',
            datatype: 'json',
            mtype: 'POST',
            shrinkToFit: true,
            colNames: ['Acciones', 'IdMoneda', 'Nombre', 'Abreviatura', 'Codigo AFIP', 'Genera Impuestos?'],
            colModel: [
                        { name: 'act', index: 'act', align: 'center', width: 0, sortable: false, editable: false, search: false },
                        { name: 'IdMoneda', index: 'IdMoneda', align: 'left', width: 0, editable: false, hidden: true },
                        { name: 'Nombre', index: 'Nombre', align: 'left', width: 0, editable: false, search: true, searchoptions: { sopt: ['cn'] } },
                        { name: 'Abreviatura', index: 'Abreviatura', align: 'center', width: 0, editable: false, search: true, searchoptions: { sopt: ['cn'] } },
                        { name: 'CodigoAFIP', index: 'CodigoAFIP', align: 'center', width: 0, editable: false, search: true, searchoptions: { sopt: ['cn'] } },
                        { name: 'GeneraImpuestos', index: 'GeneraImpuestos', align: 'center', width: 0, editable: false, search: true, searchoptions: { sopt: ['cn'] } }
                    ],
            onSelectRow: function (id) {
                if (id && id !== lastSelectedId) {
                    if (typeof lastSelectedId !== "undefined") {
                        grid.jqGrid('restoreRow', lastSelectedId);
                    }
                    lastSelectedId = id;
                }
            },
            pager: $('#ListaPager'),
            rowNum: 15,
            rowList: [10, 20, 50, 100],
            sortname: 'IdMoneda',
            sortorder: 'asc',
            viewrecords: true,
            width: 'auto',
            height: '100%',
            altRows: false,
            footerrow: true,
            userDataOnFooter: true,
            caption: '<b>MONEDAS</b>'
        });
        jQuery("#Lista").jqGrid('navGrid', '#ListaPager', { refresh: true, add: false, edit: false, del: false }, {}, {}, {}, { sopt: ["cn"], width: 700, closeOnEscape: true, closeAfterSearch: true });
        jQuery("#Lista").jqGrid('gridResize', { minWidth: 350, maxWidth: 1500, minHeight: 80, maxHeight: 500 });

    });

</script>
