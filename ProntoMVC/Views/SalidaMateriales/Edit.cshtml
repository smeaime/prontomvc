    <div id="principal" class="container-fluid" style="padding-left: 0px; padding-right: 0px;">
        <form class="form-horizontal" style=" margin-bottom: 0px;">
            <div id="cuerpomaspie" class="" style="padding-bottom:2px; position: relative; height: 100%  " @*Height of the footer *@>
                <div id="conscroll" style="height: 600px; margin-bottom: 40px; overflow-y: scroll; top: 50px; padding-left: 25px; padding-right: 25px; overflow-x: hidden;">
                    <div class="row-fluid" style="margin-bottom: 15px; margin-top: 5px;">
                        <div class="span6">
                            <div class="" style='font-size: 34px; margin-top: 5px; height: 45px; font-weight: 400;
                            text-shadow: 0 1px 0  lightgray; font-family: "Segoe UI Web Regular", "Segoe UI", "Lucida", Tahoma, Arial,"sans-serif"'>
                                <span class="span6" style="padding-top: 15px; width: 310px">Salida de materiales </span>
                                @Html.TextBoxFor(model => model.NumeroSalidaMateriales, new { style = "height: 50px ;  font-weight: 400; text-shadow: 0 1px 0  lightgray; font-size: 34px; border: 0; padding: 0 ; text-align: right; background: transparent;  font-family: 'Segoe UI Web Regular', 'Segoe UI', 'Lucida', Tahoma, Arial,'sans-serif';                    -webkit-box-shadow: none; -moz-box-shadow: none; box-shadow: none;                   ", @class = "span3", @readonly = "readonly" })
                            </div>
                        </div>
                        <div class="span6">
                            @*  <input type="button" id="grabar2" value="Aceptar" style="margin-top: 15px;" class="btn  btn-large btn-primary pull-right" />*@
                        </div>
                        <script>
                            $(function () {

                                function resizeInput() {
                                    // $(this).attr('size', $(this).val().length + 2);
                                    $(this).css('width', $(this).val().length * 32);
                                }
                                $('#NumeroSalidaMateriales').css('width', $('#NumeroSalidaMateriales').val().length * 21);
                            })
                        </script>
                    </div>

                    <div class="row-fluid">
                        <div class="span2 lightblue">
                            @Html.LabelFor(model => model.NumeroSalidaMateriales2, "Numero")
                            @Html.TextBoxFor(model => model.NumeroSalidaMateriales2, new { style = "text-align: center; font-weight: bold; font-size: 18px;", @class = "span12", @readonly = "readonly" })
                            @Html.ValidationMessageFor(model => model.NumeroSalidaMateriales2)
                        </div>
                        <div class="span1 lightblue">
                            @Html.LabelFor(model => model.NumeroSalidaMateriales, ":")
                            @Html.TextBoxFor(model => model.NumeroSalidaMateriales, new { style = "text-align: center; font-weight: bold; font-size: 18px;", @class = "span12", @readonly = "readonly" })
                            @Html.ValidationMessageFor(model => model.NumeroSalidaMateriales)
                        </div>
                        <div class="span2 lightblue">
                            @Html.LabelFor(model => model.FechaSalidaMateriales, "Fecha")
                            @Html.TextBoxFor(model => model.FechaSalidaMateriales, new Dictionary<string, object> { { "class", "span12" }, { "placeholder", "dd/mm/yyyy" } })
                            @Html.ValidationMessageFor(model => model.FechaSalidaMateriales)
                            <script>
                                $("#FechaSalidaMateriales").datepicker({
                                    changeMonth: true,
                                    changeYear: true,
                                    dateFormat: 'dd/mm/yy'
                                    //numberOfMonths: 2,
                                });
                            </script>
                        </div>
                        <div class="span3 lightblue">
                            @Html.LabelFor(model => model.TipoSalida, "Tipo de salida")
                            @Html.DropDownList("TipoSalida", null, "", new { @class = "span12", @style = "height: 15px;   line-height: 14px;" })
                            @Html.ValidationMessageFor(model => model.TipoSalida)
                        </div>
                        <div class="span1 lightblue">
                            <div>@Html.Hidden("IdSalidaMateriales", Model.IdSalidaMateriales)</div>
                            <div>@Html.Hidden("IdProveedor", Model.IdProveedor)</div>
                            <div>@Html.Hidden("Anulada", Model.Anulada)</div>
                            <div>@Html.Hidden("FechaAnulacion", Model.FechaAnulacion)</div>
                            <div>@Html.Hidden("IdUsuarioAnulo", Model.IdUsuarioAnulo)</div>
                            <div><input id="FechaInicial" name="FechaInicial" type="hidden" value=@Request.QueryString["fechainicial"]></div>
                            <div><input id="FechaFinal" name="FechaFinal" type="hidden" value=@Request.QueryString["fechafinal"]></div>

                            <div>@Html.Hidden("IdMonedaPesos", "")</div>
                            <div>@Html.Hidden("IdMonedaDolar", "")</div>
                            <div>@Html.Hidden("IdMonedaEuro", "")</div>

                            <div>@Html.Hidden("ProntoIni_OpcionesAdicionales", "")</div>
                            <div>@Html.Hidden("ProntoIni_OcultarCosto", "")</div>
                            <div>@Html.Hidden("ProntoIni_OcultarEquipoDestino_OT", "")</div>
                            <div>@Html.Hidden("ProntoIni_TipoDeCosto", "")</div>
                            <div>@Html.Hidden("ProntoIni_ActivarFechaImputacion", "")</div>
                            <div>@Html.Hidden("ProntoIni_ExigirEquipoDestino", "")</div>
                            <div>@Html.Hidden("ProntoIni_PermitirImputarTodosLosEquipoDestino", "")</div>
                            <div>@Html.Hidden("ProntoIni_OTsDesdeMantenimiento", "")</div>
                            <script>
                                var mCampoVB = "";

                                mCampoVB = '@(ViewBag.IdMonedaPesos)';
                                $("#IdMonedaPesos").val(mCampoVB);
                                mCampoVB = '@(ViewBag.IdMonedaDolar)';
                                $("#IdMonedaDolar").val(mCampoVB);
                                mCampoVB = '@(ViewBag.IdMonedaEuro)';
                                $("#IdMonedaEuro").val(mCampoVB);

                                mCampoVB = '@(ViewBag.ProntoIni_OpcionesAdicionales)';
                                $("#ProntoIni_OpcionesAdicionales").val(mCampoVB);
                                mCampoVB = '@(ViewBag.ProntoIni_OcultarCosto)';
                                $("#ProntoIni_OcultarCosto").val(mCampoVB);
                                mCampoVB = '@(ViewBag.ProntoIni_OcultarEquipoDestino_OT)';
                                $("#ProntoIni_OcultarEquipoDestino_OT").val(mCampoVB);
                                mCampoVB = '@(ViewBag.ProntoIni_TipoDeCosto)';
                                $("#ProntoIni_TipoDeCosto").val(mCampoVB);
                                mCampoVB = '@(ViewBag.ProntoIni_ActivarFechaImputacion)';
                                $("#ProntoIni_ActivarFechaImputacion").val(mCampoVB);
                                mCampoVB = '@(ViewBag.ProntoIni_ExigirEquipoDestino)';
                                $("#ProntoIni_ExigirEquipoDestino").val(mCampoVB);
                                mCampoVB = '@(ViewBag.ProntoIni_PermitirImputarTodosLosEquipoDestino)';
                                $("#ProntoIni_PermitirImputarTodosLosEquipoDestino").val(mCampoVB);
                                mCampoVB = '@(ViewBag.ProntoIni_OTsDesdeMantenimiento)';
                                $("#ProntoIni_OTsDesdeMantenimiento").val(mCampoVB);
                            </script>
                        </div>
                    </div>

                    <div class="row-fluid">
                        <div class="span3 lightblue">
                            @Html.LabelFor(model => model.IdObraOrigen, "Obra origen")
                            @Html.DropDownList("IdObraOrigen", null, "", new { @class = "span12", @style = "height: 15px;   line-height: 14px;" })
                            @Html.ValidationMessageFor(model => model.IdObraOrigen)
                        </div>
                        <div class="span3 lightblue">
                            @Html.LabelFor(model => model.IdObra, "Obra destino")
                            @Html.DropDownList("IdObra", null, "", new { @class = "span12", @style = "height: 15px;   line-height: 14px;" })
                            @Html.ValidationMessageFor(model => model.IdObra)
                        </div>
                        <div class="span3 lightblue">
                            @Html.LabelFor(model => model.IdTransportista1, "Transportista")
                            @Html.DropDownList("IdTransportista1", null, "", new { @class = "span12", @style = "height: 15px;   line-height: 14px;" })
                            @Html.ValidationMessageFor(model => model.IdTransportista1)
                        </div>
                        <div class="span3 lightblue">
                            @Html.LabelFor(model => model.IdTarifaFlete, "Tarifa flete")
                            @Html.DropDownList("IdTarifaFlete", null, "", new { @class = "span12", @style = "height: 15px;   line-height: 14px;" })
                            @Html.ValidationMessageFor(model => model.IdTarifaFlete)
                        </div>
                    </div>

                    <div class="row-fluid">
                        <div class="span2 lightblue">
                            @Html.LabelFor(model => model.ValePreimpreso, "Vale preimpreso")
                            @Html.TextBoxFor(model => model.ValePreimpreso, new { @class = "span12" })
                            @Html.ValidationMessageFor(model => model.ValePreimpreso)
                        </div>
                        <div class="span2 lightblue">
                            @Html.LabelFor(model => model.NumeroRemitoPreimpreso1, "Remito")
                            @Html.TextBoxFor(model => model.NumeroRemitoPreimpreso1, new { @class = "span12" })
                            @Html.ValidationMessageFor(model => model.NumeroRemitoPreimpreso1)
                        </div>
                        <div class="span1 lightblue">
                            @Html.LabelFor(model => model.NumeroRemitoPreimpreso2, "preimpreso")
                            @Html.TextBoxFor(model => model.NumeroRemitoPreimpreso2, new { @class = "span12" })
                            @Html.ValidationMessageFor(model => model.NumeroRemitoPreimpreso2)
                        </div>
                        <div class="span2 lightblue">
                            @Html.LabelFor(model => model.NumeroRemitoTransporte, "Remito transporte")
                            @Html.TextBoxFor(model => model.NumeroRemitoTransporte, new { @class = "span12" })
                            @Html.ValidationMessageFor(model => model.NumeroRemitoTransporte)
                        </div>
                        <div class="span1 lightblue">
                            @Html.LabelFor(model => model.Patente1, "Dominio")
                            @Html.TextBoxFor(model => model.Patente1, new { @class = "span12" })
                            @Html.ValidationMessageFor(model => model.Patente1)
                        </div>
                        <div class="span2 lightblue">
                            @Html.LabelFor(model => model.Chofer, "Chofer")
                            @Html.TextBoxFor(model => model.Chofer, new { @class = "span12" })
                            @Html.ValidationMessageFor(model => model.Chofer)
                        </div>
                        <div class="span2 lightblue">
                            @Html.LabelFor(model => model.NumeroDocumento, "Documento")
                            @Html.TextBoxFor(model => model.NumeroDocumento, new { @class = "span12" })
                            @Html.ValidationMessageFor(model => model.NumeroDocumento)
                        </div>
                    </div>

                    <div class="row-fluid">
                        <div class="span4 lightblue">
                            <label for="EntidadLabel" id="EntidadLabel">Proveedor</label>
                            <input type="text" name="Proveedor" id="Proveedor" style="font-size: 15px; text-align: left;" class="span12" />
                            <script type="text/jscript">
                                $("#Proveedor").autocomplete({
                                    source: '@Url.Action("GetProveedoresAutocomplete2", "Proveedor")',
                                    minLength: 0,
                                    messages: { noResults: "", results: function () { } },
                                    select: function (event, ui) {
                                        $("#IdProveedor").val(ui.item.id);
                                        $("#Proveedor").val(ui.item.value);
                                        event.preventDefault();
                                        ActualizarDatos();
                                    }
                                });
                            </script>
                        </div>
                        <div class="span2 lightblue">
                            <label for="Cuit">Cuit</label>
                            <input type="text" name="Cuit" id="Cuit" style="font-size: 10px; text-align: center;" readonly="readonly" class="span12" />
                        </div>
                        <div class="span4 lightblue">
                            <label for="Email">Email</label>
                            <input type="text" name="Email" id="Email" style="font-size: 15px; text-align: left;" readonly="readonly" class="span12" />
                        </div>
                    </div>

                    <div class="row-fluid">
                        <div class="span5 lightblue">
                            <label for="Direccion">Direccion</label>
                            <input type="text" name="Direccion" id="Direccion" style="font-size: 15px; text-align: left;" readonly="readonly" class="span12" />
                        </div>
                        <div class="span2 lightblue">
                            <label for="Localidad">Localidad</label>
                            <input type="text" name="Localidad" id="Localidad" style="font-size: 15px; text-align: left;" readonly="readonly" class="span12" />
                        </div>
                        <div class="span2 lightblue">
                            <label for="Provincia">Provincia</label>
                            <input type="text" name="Provincia" id="Provincia" style="font-size: 15px; text-align: left;" readonly="readonly" class="span12" />
                        </div>
                        <div class="span1 lightblue">
                            <label for="CodigoPostal">Cod postal</label>
                            <input type="text" name="CodigoPostal" id="CodigoPostal" style="font-size: 15px; text-align: left;" readonly="readonly" class="span12" />
                        </div>
                        <div class="span2 lightblue">
                            <label for="Telefono">Telefono</label>
                            <input type="text" name="Telefono" id="Telefono" style="font-size: 15px; text-align: left;" readonly="readonly" class="span12" />
                        </div>
                    </div>

                    <div class="row-fluid">
                        <div class="span12 lightblue">
                            <table id="ListaArticulos" class="scroll" cellpadding="0" cellspacing="0"></table>
                            <div id="ListaPager1" class="scroll" style="text-align: center; height: 30px"></div>
                        </div>
                    </div>

                    <div class="row-fluid">
                        <div class="span4 lightblue">
                            @if (Model.FechaAnulacion != null)
                            {
                                <span style="margin: 0px 0px 0px 0px; height:; padding: 5px; border-style: groove; border-width: 0px; border-spacing: 0px; font-size: 15px; background-color: rgb(100%, 88%, 88%); ">ANULADA</span>
                            }
                        </div>
                    </div>

                    <div class="row-fluid">
                        <div class="span12 lightblue">
                            @Html.LabelFor(model => model.Observaciones)
                            @Html.TextAreaFor(model => model.Observaciones, new { @class = "span12" })
                            @Html.ValidationMessageFor(model => model.Observaciones)
                        </div>
                        <!--/span-->
                    </div>
                </div>

                <div id="pie" style="position: absolute; bottom: -26px; background: rgb(236, 236, 236); width: 100%; height: 68px; padding-left: 0; margin-right: 15px;">
                    <hr style="margin: 0; border-top-color: #D8D4D4; border-bottom: 0px solid #ffffff;" />
                    <div class="row-fluid " style="padding: 11px 0px 0px 0px">
                        <div class="span12 lightblue">
                            <input type="button" id="grabar2" value="Aceptar" class="btn  btn-large btn-primary " usesubmitbehavior="false" />
                            @if (Model.IdSalidaMateriales > 0)
                            {
                                <input type="button" id="anular" value="Anular" class="btn  btn-large btn-primary" />
                                <script>
                                    $(function () {
                                        $("#anular").click(function () {
                                            $("#dialog-password").dialog({
                                                buttons: {
                                                    'Aceptar': function () {
                                                        var idAux = $("#Aux1").val();
                                                        $("#Anulada").val("SI");
                                                        $("#FechaAnulacion").val(Hoy());
                                                        $("#IdUsuarioAnulo").val(idAux);
                                                        $('#grabar2').click();
                                                    },
                                                    'Cancelar': function () {
                                                        $(this).dialog('close');
                                                    }
                                                },
                                                open: function () {
                                                }
                                            });
                                            $('#dialog-password').dialog('open');
                                            $('#mySelect').prop("disabled", false);
                                            CargarUsuariosConPermisoDeAnulacion();
                                        });

                                        function CargarUsuariosConPermisoDeAnulacion() {
                                            var combo = $("#mySelect")
                                            combo.find("option:gt(0)").remove();
                                            combo.find("option:first").text("Cargando...");
                                            $.getJSON(ROOT + 'Articulo/GetStoreProc?sp=Empleados_TX_ParaAnularPorFormulario&p1=9', {
                                            }, function (json) {
                                                combo.find("option:first").text("");
                                                for (var i = 0; i < json.length; i++) {
                                                    $("<option/>").attr("value", json[i].value).text(json[i].title).appendTo(combo);
                                                }
                                            });
                                        }
                                    })
                                </script>
                            }
                            @if (Model.IdSalidaMateriales > 0)
                            {
                                <a id="lImprimir" class="btn  btn-large" style="color: Black" href="@Url.Action("ImprimirConPlantillaEXE", new { @id = Model.IdSalidaMateriales })"><i class="icon-print"></i>&nbsp;Imprimir</a>
                            }
                            @Html.ActionLink("Volver al listado", "Index", null, new { @class = "btn btn-link pull-right" })
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>

    <script type="text/javascript">
        $(window).resize(function () {
            RefrescaAnchoGrillaDetalle();
            $("#conscroll").height($(window).height() - 120);
        });
    </script>
}