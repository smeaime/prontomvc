        var lastSelectedId;
        var inEdit;
        grid = $("#Lista");

        $('.ui-jqgrid .ui-jqgrid-htable th div').css('white-space', 'normal');

        $('#Lista').jqGrid({
            url: '@Url.Action("RubrosContables_DynamicGridData", "RubroContable")',
            datatype: 'json',
            mtype: 'POST',
            colNames: ['Acciones', 'IdCliente', 'Razon social', '', 'codigo de agrupacion.', 'grupo', 'Distribuir gastos en analisis', 'Tomar datos del mes'
